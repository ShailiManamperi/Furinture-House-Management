<AnchorPane fx:id="frame" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.system.controller.ItemFrameController">
   <children>
      <ImageView fitHeight="700.0" fitWidth="1171.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/Adminbackground.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="460.0" fitWidth="350.0" layoutX="76.0" layoutY="92.0" opacity="0.5" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/itemframe.jpg" />
         </image>
      </ImageView>
      <TableView fx:id="tblItems" layoutX="505.0" layoutY="143.0" onMouseClicked="#itemsdetailOnMouseClikced" prefHeight="448.0" prefWidth="453.0">
        <columns>
          <TableColumn fx:id="colId" prefWidth="108.333251953125" text="Code" />
          <TableColumn fx:id="colname" prefWidth="222.6666259765625" text="Item Name" />
            <TableColumn fx:id="colQty" prefWidth="116.3333740234375" text="Qty" />
        </columns>
      </TableView>
      <VBox layoutX="35.0" layoutY="85.0" prefHeight="455.0" prefWidth="399.0" spacing="35.0">
         <children>
            <JFXTextField fx:id="txtid" prefHeight="37.0" prefWidth="389.0" promptText="Item code">
               <font>
                  <Font size="16.0" />
               </font>
            </JFXTextField>
            <JFXTextField fx:id="txtname" prefHeight="37.0" prefWidth="389.0" promptText="Item Name">
               <font>
                  <Font size="16.0" />
               </font>
            </JFXTextField>
            <JFXComboBox fx:id="cmbtype" prefHeight="25.0" prefWidth="292.0" promptText="Item Type" />
            <JFXTextField fx:id="txtsupplier" prefHeight="37.0" prefWidth="389.0" promptText="Supplier">
               <font>
                  <Font size="16.0" />
               </font>
            </JFXTextField>
            <JFXTextField fx:id="txtprice" prefHeight="37.0" prefWidth="389.0" promptText="Get Price">
               <font>
                  <Font size="16.0" />
               </font>
            </JFXTextField>
            <JFXTextField fx:id="txtprice1" prefHeight="37.0" prefWidth="389.0" promptText="Sell Price">
               <font>
                  <Font size="16.0" />
               </font>
            </JFXTextField>
            <JFXTextField fx:id="txtqty" prefHeight="37.0" prefWidth="389.0" promptText="Qutatity">
               <font>
                  <Font size="16.0" />
               </font>
            </JFXTextField>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
      <ImageView fx:id="imghome" fitHeight="50.0" fitWidth="50.0" layoutX="5.0" layoutY="5.0" onMouseClicked="#HomePageOnMouseClicked" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/logo.jpg" />
         </image>
      </ImageView>
      <Label layoutX="58.0" layoutY="5.0" prefHeight="43.0" prefWidth="273.0" text="Items Management" textFill="#3646a1">
         <font>
            <Font name="High Tower Text Italic" size="35.0" />
         </font>
      </Label>
      <JFXTextField fx:id="txtSearch" layoutX="541.0" layoutY="77.0" prefHeight="37.0" prefWidth="244.0" promptText="Search">
         <font>
            <Font size="16.0" />
         </font>
      </JFXTextField>
      <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="502.0" layoutY="78.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/icons8-search-100.png" />
         </image>
      </ImageView>
      <HBox layoutY="582.0" prefHeight="67.0" prefWidth="500.0" spacing="20.0">
         <children>
            <JFXButton fx:id="btnAdd" onAction="#addItemOnAction" prefHeight="72.0" prefWidth="107.0" text="Add">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="btnUpdate" onAction="#UpdateItemOnAction" prefHeight="66.0" prefWidth="108.0" text="Update">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="btnDelete" onAction="#DeleteItemOnAction" prefHeight="80.0" prefWidth="109.0" text="Delete">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="btnClear" onAction="#ClearItemOnAction" prefHeight="73.0" prefWidth="109.0" text="Clear">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </JFXButton>
         </children>
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
         </padding>
      </HBox>
      <JFXButton fx:id="btnNew" layoutX="412.0" layoutY="104.0" onAction="#newItemIdOnAction" opacity="0.85" prefHeight="33.0" prefWidth="72.0" text="New">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="btnnewload" layoutX="774.0" layoutY="625.0" onAction="#addnewitemloadframeOnAction" prefHeight="61.0" prefWidth="175.0" style="-fx-background-color: C9EEFF; -fx-border-color: black; -fx-border-radius: 20;" text="New Item Load">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </JFXButton>
   </children>
   <stylesheets>
      <URL value="@../StyleSheet/Normal.css" />
      <URL value="@../StyleSheet/button.css" />
   </stylesheets>
</AnchorPane>
